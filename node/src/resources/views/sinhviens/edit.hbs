<div class="mt-4">
    <form method="post" action="/hocviens/{{hocviens._id}}?_method=PUT" class="formnhap">
        <div class="form-row">

            <div class="col">
                <label for="ho" class="form-label">Họ tên</label>
                <input type="text" class="form-control" id="hoTen" name="hoTen" value="{{hocviens.username}}"
                    style="width: 500px;">
            </div>
            <div class="col">
                <label for="tuoi" class="form-label">Tuổi</label>
                <input type="text" class="form-control" id="tuoi" name="tuoi" value="{{hocviens.tuoi}}"
                    style="width: 500px;">
            </div>
            <div class="col">
                <label for="gioiTinh" class="form-label">Giới tính</label>
                <input type="text" class="form-control" id="gioiTinh" name="gioiTinh" value="{{hocviens.gioiTinh}}"
                    style="width: 500px;">
            </div>
            <div class="col">
                <label for="img" class="form-label">Quê Quán</label>
                <input type="text" class="form-control" id="noiSinh" name="noiSinh" value="{{hocviens.noiSinh}}"
                    style="width: 500px;">
            </div>
            <div class="col">
                <label for="mssv" class="form-label">MSSV</label>
                <input type="text" class="form-control" id="mssv" name="mssv" value="{{hocviens.mssv}}"
                    style="width: 500px;">
            </div>
            <div class="col">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="password" value="{{hocviens.password}}"
                    style="width: 500px;">
            </div>
            <div class="col">
                <label for="email" class="form-label">Quê Quán</label>
                <input type="text" class="form-control" id="email" name="email" value="{{hocviens.email}}"
                    style="width: 500px;">
            </div>
            <div class="col">
                <label for="diaChi" class="form-label">Dia chi</label>
                <input type="text" class="form-control" id="diaChi" name="diaChi" value="{{hocviens.diaChi}}"
                    style="width: 500px;">
            </div>
            <div class="col">
                <label for="img" class="form-label">Image</label>
                <input type="text" class="form-control" id="img" name="img" value="{{hocviens.img}}"
                    style="width: 500px;">
            </div>


        </div>
        <div class="them" style="text-align: center;">
            <button type="submit" class="btn btn-outline-success" style="width: 1300px; margin-top: 50px;">Sửa</button>
        </div>
    </form>



</div>