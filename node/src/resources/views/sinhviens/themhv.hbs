<div class="mt-4">
    <form method="post" action="/hocviens/themhv/insert" class="formnhap">
        <div class="form-row">
            <div class="col">
                <label for="id">Nhập Id</label>
                <input type="text" class="form-control" id="_id" name="_id" style="width: 500px;">
            </div>
            <div class="col">
                <label for="ho" class="form-label">Họ tên</label>
                <input type="text" class="form-control" id="username" name="username" style="width: 500px;">
            </div>
            <div class="col">
                <label for="tuoi" class="form-label">Tuổi</label>
                <input type="text" class="form-control" id="tuoi" name="tuoi" style="width: 500px;">
            </div>
            <div class="col">
                <label for="gioiTinh" class="form-label">Giới tính</label>
                <input type="text" class="form-control" id="gioiTinh" name="gioiTinh" style="width: 500px;">
            </div>
            <div class="col">
                <label for="img" class="form-label">Quê Quán</label>
                <input type="text" class="form-control" id="noiSinh" name="noiSinh" style="width: 500px;">
            </div>
            <div class="col">
                <label for="mssv" class="form-label">MSSV</label>
                <input type="text" class="form-control" id="mssv" name="mssv" style="width: 500px;">
            </div>
            <div class="col">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="password" style="width: 500px;">
            </div>
            <div class="col">
                <label for="email" class="form-label">Quê Quán</label>
                <input type="text" class="form-control" id="email" name="email" style="width: 500px;">
            </div>
            <div class="col">
                <label for="diaChi" class="form-label">Dia chi</label>
                <input type="text" class="form-control" id="diaChi" name="diaChi" style="width: 500px;">
            </div>
            <div class="col">
                <label for="img" class="form-label">Image</label>
                <input type="text" class="form-control" id="img" name="img" style="width: 500px;">
            </div>
            <div class="col">

                <label for="khoa" class="form-label">Chọn lớp</label>
                <select name="lop" id="lop" class="form-control" style="width: 500px;">

                    {{#each khoas}}
                    <option value={{this._id}}>{{this.tenKhoa}}</option>
                    {{/each}}

                </select>
            </div>

        </div>
        <div class="them" style="text-align: center;">
            <button type="submit" class="btn btn-outline-success" style="width: 1300px; margin-top: 50px;">Thêm</button>
        </div>
    </form>



</div>