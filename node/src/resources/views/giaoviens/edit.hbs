<div class="mt-4">
    <form method="post" action="/giaoviens/{{giaoviens._id}}?_method=PUT"
        class="container-fl px-2 py-3 text-lg-start my-2">
        <div class="form-row">

            <div class="col">
                <label for="ho" class="form-label">Họ tên</label>
                <input type="text" class="form-control" id="username" name="username" value="{{giaoviens.username}}"
                    style="width: 500px;">
            </div>
            <div class="col">
                <label for="tuoi" class="form-label">Tuổi</label>
                <input type="text" class="form-control" id="tuoi" name="tuoi" value="{{giaoviens.tuoi}}"
                    style="width: 500px;">
            </div>
            <div class="col">
                <label for="gioiTinh" class="form-label">Giới tính</label>
                <input type="text" class="form-control" id="gioiTinh" name="gioiTinh" value="{{giaoviens.gioiTinh}}"
                    style="width: 500px;">
            </div>
            <div class="col">
                <label for="img" class="form-label">Quê Quán</label>
                <input type="text" class="form-control" id="noiSinh" name="noiSinh" value="{{giaoviens.noiSinh}}"
                    style="width: 500px;">
            </div>
            <div class="col">
                <label for="diaChi" class="form-label">Email</label>
                <input type="text" class="form-control" id="email" name="email" value="{{giaoviens.email}}"
                    style="width: 500px;">
            </div>
            <div class="col">
                <label for="diaChi" class="form-label">Dia chi</label>
                <input type="text" class="form-control" id="diaChi" name="diaChi" value="{{giaoviens.diaChi}}"
                    style="width: 500px;">
            </div>
            <div class="col">
                <label for="img" class="form-label">Image</label>
                <input type="text" class="form-control" id="img" name="img" value="{{giaoviens.img}}"
                    style="width: 500px;">
            </div>


        </div>
        <div class="them" style="text-align: center;">
            <button type="submit" class="btn btn-outline-success" style="width: 1300px; margin-top: 50px;">Sửa</button>
        </div>
    </form>



</div>